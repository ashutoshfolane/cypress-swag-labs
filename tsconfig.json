{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "types": ["cypress", "node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["cypress/pages/*"],
      "@support/*": ["cypress/support/*"],
      "@api/*": ["cypress/api/*"]
    }
  },
  "include": ["cypress/**/*.ts", "cypress/**/*.d.ts", "cypress.config.ts", "types/**/*.d.ts"]
}
